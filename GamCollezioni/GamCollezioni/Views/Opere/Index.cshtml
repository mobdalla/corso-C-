@model IEnumerable<GamCollezioni.Models.Opera>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<p>
    <form>
        Cerca per autore:<input type="text" name="autore"  value="@ViewBag.Autore"/>
        Cerca per Titolo:<input type="text" name="titolo" value="@ViewBag.Titolo"/>
        <input type="submit" value="Cerca" />
    </form>
   
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Autore)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Titolo)
            </th>
          
            <th>
                @Html.DisplayNameFor(model => model.Tecnica)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Autore)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Titolo)
            </td>
           
            <td>
                @Html.DisplayFor(modelItem => item.Tecnica)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<p>
@for(int i = 1; i<=ViewBag.Pagine; i++)
{
        if (ViewBag.PaginaSele == i)
        {
            <a><b>@i</b></a>
        }
        else
        {
            <a href="/Opere/?pagina=@i&autore=@ViewBag.Autore&titolo=@ViewBag.Titolo">@i</a>
        }

}
</p>